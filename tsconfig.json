{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build",
    "module": "esnext",
    "esModuleInterop": true,
    "target": "es5",
    "lib": [
      "es5",
      "es6",
      "es7",
      "es2017",
      "dom",
      "es2019"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "client",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "typeRoots": ["./types/*.d.ts", "node_modules/@types"]
  },
  "exclude": [
    "bin",
    "lang",
    "lib",
    "server",
    "automated",
    "support",
    "feature",
    "config/jest.config.js",
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "bdd",
    "reports",
    "tools",
    "config",
    "coverage",
    "config/commitlint.config.js"
  ]
}
